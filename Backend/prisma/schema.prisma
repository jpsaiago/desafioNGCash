// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:ngchallenge@db:5432/ng-challenge"
}

model User {
  id        String  @id @default(uuid())
  username  String  @unique
  password  String
  account   Account @relation(fields: [accountId], references: [id])
  accountId String  @unique

  @@map("users")
}

model Account {
  id                   String        @id @default(uuid())
  user                 User?
  balance              Float
  debitedTransactions  Transaction[] @relation("Debited")
  creditedTransactions Transaction[] @relation("Credited")

  @@map("accounts")
}

model Transaction {
  id              String   @id @default(uuid())
  debitedAccount  Account  @relation("Debited", fields: [debitedId], references: [id])
  debitedId       String
  creditedAccount Account  @relation("Credited", fields: [creditedId], references: [id])
  creditedId      String
  value           Float
  createdAt       DateTime @default(now())

  @@map("transactions")
}
